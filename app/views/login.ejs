  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
  <script src="/js/jquery-ui.min.js"></script>
</head>

<body id="login">
<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4">
                <a href="/"><img src='img/flask.svg' alt='Formula Stocks' class="flask" /></a>

                <form class="text-center" action="/login" method="post">
                    <h2 class="form-signin-heading">Please sign in</h2>

                    <% for(var i in messages) { %>
                        <div class="alert alert-danger">
                            <p><strong><i class="fa fa-times-circle"></i> Error!</strong> <%= messages[i] %></p>
                        </div>
                    <% } %>

                    <div class="form-group">
                        <input type="email" id="username" name="username" class="form-control" placeholder="Email address" required="">
                        <label for="username"><i class="fa fa-envelope"></i></label>
                    </div>

                    <div class="form-group">
                        <input type="password" id="password" name="password" class="form-control" placeholder="Password" required="">
                        <label for="password"><i class="fa fa-lock"></i></label>
                    </div>

                    <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>

                    <p>Don't have an account? <a href="/register">Sign Up!</a></p>
                </form>
            </div>
        </div>
    </div>
</section>

    <!-- Main JavaScript -->
    <script src="/js/main.min.js"></script>
</body>
</html>