    <!-- jQuery & jQuery UI -->
    <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
    <script src="/js/jquery-ui.min.js"></script>
</head>

<body id="billing">
<section>
	<div class="container">
		<div class="row">
			<div class="col-lg-4 col-lg-offset-4 col-sm-8 col-sm-offset-2">
				<a href="/"><img src="../img/flask.svg" alt="Formula Stocks" class="flask" /></a>

				<form id="billing-form" class="text-center" method="post">
					<h2>Billing Information</h2>

					<% for(var i in messages) { %>
						<div class="alert alert-danger">
							<p><strong><i class="fa fa-times-circle"></i> Error!</strong><%= messages[i] %></p>
						</div>
					<% } %>

					<p>
						<br />
						<b>Name:</b> <%=form_data.firstname%> <%=form_data.lastname%><br />
						<b>Email:</b> <%=form_data.email%><br />
						<b>Plan:</b> <%=form_data.plan%> Formula <%=form_data.cycle%> Subscription
					</p>

					<div class="col-lg-12 col-sm-12">
						<div class="form-group">
							<input type="text" id="number" name="number" data-stripe="number" class="form-control" placeholder="Card number" required="">
							<label for="number"><i class="fa fa-credit-card"></i></label>
						</div>
					</div>

					<div class="col-lg-6 col-sm-6 no-padding-left">
						<div class="form-group">
							<input type="text" id="exp-date" class="form-control" placeholder="MM/YYYY" required="">
							<label for="exp-date"><i class="fa fa-calendar-o"></i></label>
							<input type="hidden" id="exp-month" name="exp-month" data-stripe="exp-month" />
							<input type="hidden" id="exp-year" name="exp-year" data-stripe="exp-year" />
							
						</div>
					</div>

					<div class="col-lg-6 col-sm-6 no-padding-right">
						<div class="form-group">
							<input type="text" id="cvc" name="cvc" data-stripe="cvc" class="form-control" placeholder="CVC code" required="">
							<label for="cvc"><i class="fa fa-ellipsis-h"></i></label>
						</div>
					</div>


					<div class="col-lg-12 col-sm-12">
						<p class="total-label">Total Amount Due:<br/> <span class="total">$<span class="amount-due"><%=form_data.total_price %>
						</span></span></p>
					</div>

					<input type="hidden" id="firstname" name="firstname" value="<%=form_data.firstname%>" />
					<input type="hidden" id="lastname" name="lastname" value="<%=form_data.lastname%>" />
					<input type="hidden" id="email" name="email" value="<%=form_data.email%>" />
					<input type="hidden" id="password" name="password" value="<%=form_data.password%>" />
					<input type="hidden" id="selected_plan" name="selected_plan" value="<%=form_data.selected_plan%>" />
					<input type="hidden" id="subscription_checkbox" name="subscription_checkbox" value="<%=form_data.subscription_checkbox%>" />
					<input type="hidden" id="verification_code" name="verification_code" />

					<div class="col-lg-12 col-sm-12">
						<div class="alert alert-danger validation" style="display: none;">
							<p><strong><i class="fa fa-times-circle"></i> Error!</strong> <span class="error-message"></span></p>
						</div>
					</div>
					
					<button class="btn btn-lg btn-primary btn-block" type="submit">Submit Payment &amp; Sign Up</button>					
				</form>
			</div>
		</div>
	</div>
</section>

	<!-- Main JavaScript -->
	<!-- <script src="/js/main.min.js"></script> -->
	<script src="/js/forms.min.js"></script>
	<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
	<script type="text/javascript" src="/js/validation/billing.min.js"></script>
</body>

</html>