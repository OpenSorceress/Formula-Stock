  <script src="//code.jquery.com/jquery-1.11.2.min.js"></script>
  <script src="/js/jquery-ui.min.js"></script>
</head>

<body id="login">
    <div class="container">
        <!-- Logo -->
        <a href="/"><img src='img/flask.svg' alt='Formula Stocks' class="flask" /></a>

        <!-- Login Form -->
        <form class="form-horizontal" action="/login" method="post">
            <fieldset>
                <legend>Sign In</legend>
                <p>Please sign in to access your dashboard.</p>

                <% for(var i in messages) { %>
                    <div class="alert alert-danger">
                        <p><strong><i class="fa fa-times-circle"></i> Error!</strong> <%= messages[i] %></p>
                    </div>
                <% } %>

                <div class="form-group">
                    <label for="username" class="col-lg-3 control-label"><i class="fa fa-envelope"></i></label>
                    <input type="text" class="form-control lg" id="username" name="username" placeholder="Email Address" tabindex="1">
                </div>

                <div class="form-group">
                    <label for="password" class="col-lg-3 control-label"><i class="fa fa-lock"></i></label>
                    <input type="password" class="form-control" id="password" name="password" placeholder="Password" tabindex="1">
                </div>

                <div class="form-group button-group">
                    <button type="submit" id="loginButton" class="btn btn-primary">Sign In</button>
                    <p><a href="#">I need to reset my password.</a></p>
                    <p>Don't have an account? <a href="/register">Sign Up!</a></p>
                </div>
            </fieldset>
        </form>
    </div> <!-- /.container -->

    <!-- Main JavaScript -->
    <script src="/js/main.min.js"></script>
</body>
</html>